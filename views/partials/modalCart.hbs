<div class="box-cart-shopping">
    <button data-bs-toggle="offcanvas" data-bs-target="#modal-cart">
        <img class="me-1" src="/assets/imgs/components/cart/cart-shopping.svg" alt="icone-do-carrinho-de-compras">
        <p class="mb-0"><span class="qtd-cart">(0)</span> Carrinho</p>
    </button>
</div>

<div class="offcanvas offcanvas-end p-4" data-bs-scroll="false" data-bs-backdrop="true" tabindex="-1"
    style="width: 400px;" id="modal-cart">
    <div class="offcanvas-header d-flex justify-content-between p-0" style="min-height: 100px;">
        <p class="mb-0 h5" style="color: #5c4b36; font-size: 17px; font-family: Poppins, sans-serif;">CARRINHO DE COMPRAS</p>
        <button type="button" style="color: #5c4b36;" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>

    <div class="offcanvas-body d-flex flex-column justify-content-between p-0 mb-4">
        <div class="d-flex flex-column gap-2 box-items"></div>
    </div>

    <div class="d-flex flex-column" style="font-family: Open Sans, sans-serif;">
        <div class="d-flex justify-content-between mb-2">
            <p class="mb-0 fw-bold">Sub-total:</p>
            <p class="sub-total-cart-shopping mb-0 fw-bold">R$0,00</p>
        </div>

        <a coming-from-category="{{category}}" href="/carrinho">
            <button class="btn w-100 p-2"
            style="color: black; font-family: Merriweather, sans-serif; background-color: #c5a073;">Finalizar
            Compra</button>
        </a>
    </div>
</div>
</div>